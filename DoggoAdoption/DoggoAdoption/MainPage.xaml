<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoggoAdoption.MainPage">

    <StackLayout BackgroundColor="#FFFFFF">
        <Label Text="ADOPTION FEST" FontSize="Large" TextColor="Black" HorizontalOptions="Center" Margin="0,25,0,0"/>
        <Image Source="DoggoLogo.png"
               Aspect="Fill"
               HeightRequest="{OnPlatform iOS=300, Android=350}"
               WidthRequest="{OnPlatform iOS=300, Android=350}"
               HorizontalOptions="Center" />
        <Label Text="Adopt a dog today." FontSize="22" TextColor="Black" HorizontalOptions="Center"/>
        <Label Text="Dogs need a home." FontSize="22" TextColor="Black" HorizontalOptions="Center"/>
        <Button Text="Continue" Clicked="Button_Clicked" Margin="100" CornerRadius="30" BackgroundColor="#2196F3"></Button>
    </StackLayout>

</ContentPage>
